{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "no-alert": 0,
    "linebreak-style": 0,
    "no-else-return": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/jsx-filename-extension": 0,
    "arrow-parens": "off",
    "arrow-body-style": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": ["Label"],
        "required": {
          "some": ["nesting", "id"]
        },
        "allowChildren": false
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/setupTests.js", "**/*.test.js", "**/*.spec.js"]
      }
    ]
  },
  "env": {
    "browser": true,
    "jest": true
  }
}
